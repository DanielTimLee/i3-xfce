bindsym $sup+End exec  ~/.i3/quickswitch.py -e
bindsym $sup+Home exec  ~/.i3/quickswitch.py --dmenu="dmenu.xft -b -i -l 20 -nb '#000000' -nf '#CFCFCF' -sb '#D53C0A'  -sf '#FFFFFF' -fn 'Droid Sans:pixelsize=13'"

